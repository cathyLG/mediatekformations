{% extends "baseadmin.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            <!-- formulaire pour ajouter un nouveau niveau -->
            <div class="col-4">
                <p class="h2 text-center mt-3 mb-3">Nouveau niveau</p>
                {{ form_start(formNiveau) }}
                {{ form_end(formNiveau) }}
            </div>

            <!-- gestion des niveaux -->
            <div class="col">
                <p class="h2 text-center mt-3 mb-3">Gestion des niveaux</p>
                <!-- message d'alert en cas de suppresion impossible -->
                {% for message in app.flashes('alert') %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                <!-- table -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="text-left align-top" scope="col">
                                Nom
                            </th>
                            <th class="text-left align-top" scope="col">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for niveau in niveaux %}
                            <tr>
                                <td>
                                    <h5 class="text-info">
                                        {{ niveau.nom }}
                                    </h5>
                                </td>
                                <!-- bouton de suppression -->
                                <td>
                                    <a href="{{ path('admin.niveau.suppr', {id:niveau.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ niveau.nom }} ?')">Supprimer</a>
                                </td>
                            </tr>

                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
