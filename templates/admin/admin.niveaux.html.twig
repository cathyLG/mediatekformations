{% extends "baseadmin.html.twig" %}
{% block body %}
    <div class="text-center">
        <h2>Gestion des niveaux</h2>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-left align-top" scope="col">
                    id
                </th>
                <th class="text-left align-top" scope="col">
                    nom
                </th>

            </tr>
        </thead>
        <tbody>
            {% for niveau in niveaux %}
                <tr>
                    <td>
                        <h5 class="text-info">
                            {{ niveau.id }}
                        </h5>
                    </td>
                    <td>
                        <h5 class="text-info">
                            {{ niveau.nom }}
                        </h5>
                    </td>
                    <!-- bouton de suppression -->
                    <td>
                        <a href="{{ path('admin.niveau.suppr', {id:niveau.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ niveau.nom }} ?')">Supprimer</a>
                    </td>
                </tr>

            {% endfor %}
        </tbody>



    </table>
{% endblock %}
